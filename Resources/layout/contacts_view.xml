<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <TextView
            android:text="Contacts Book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" android:textAlignment="center"
            android:textStyle="bold" android:layout_margin="30px"/>
    <TextView
            android:text="Contacts end with number 7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" android:textAlignment="center"
            android:textAllCaps="false"/>
    <LinearLayout
            android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NumbersEnds7"
                android:text="Numbers ends 7" android:gravity="center|left" android:layout_margin="20px">
        </Button>
        <Button android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NumbersAll"
                android:text="All Numbers" android:gravity="center|right"
                android:layout_marginLeft="100px" android:layout_margin="20px">

        </Button>
    </LinearLayout>
    <ListView android:id="@+id/ContactsListView"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent" />
</LinearLayout>